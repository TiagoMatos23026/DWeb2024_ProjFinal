@model DWebProjFinal.Models.Utentes

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Utilizador</h1>


<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="dataNasc" />
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Telemovel" />
    <input type="hidden" asp-for="Icon" />
    <input type="hidden" asp-for="UserID" />

    


    <div class="container mt-2">
        <h3>
            <label asp-for="Icon" class="control-label"></label>

            <input type="file"
                   name="IconFile"
                   accept=".png,.jpg,.jpeg"
                   class="form-control" />
            <span asp-validation-for="Icon" class="text-danger"></span>
        </h3>

        <h3>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </h3>

        <h3>
            <div class="form-group">
                <label asp-for="Biografia" class="control-label"></label>
                <textarea asp-for="Biografia" class="form-control"></textarea>
                <span asp-validation-for="Biografia" class="text-danger"></span>
            </div>
        </h3>

        <div class="row row-cols-auto mt-2">

            <div class="form-group">
                <input class="btn btn-outline-warning" type="submit" value="Guardar" class="btn btn-primary" />
            </div>

            <div class="col">
                <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>

        </div>
    </div>

</form>
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
