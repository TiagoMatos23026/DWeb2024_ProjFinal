@model DWebProjFinal.Models.Utentes

@{
    ViewData["Title"] = "Edit";
}

<h1>Mudar Palavra-Passe</h1>


<form asp-action="ChangePassword" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />


    <div class="container mt-2">
        <h5>
            <div class="form-group">
                <label class="control-label">Password Atual</label>
                <input name="currentPassword" class="form-control" type="password" minlength="8" />
            </div>
        </h5>

        <h5>
            <div class="form-group">
                <label class="control-label">Nova Password</label>
                <input name="newPassword" class="form-control" type="password" minlength="8" />


            </div>
        </h5>

        <div class="row row-cols-auto mt-2">

            <div class="form-group">
                <input class="btn btn-outline-warning" type="submit" value="Guardar" class="btn btn-primary" />
            </div>

            <div class="col">
                <a class="btn btn-outline-success" asp-action="Index">Voltar</a>
            </div>

        </div>
    </div>

</form>
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
