@using Microsoft.AspNetCore.Identity
@model DWebProjFinal.Models.Paginas
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Details";
}
<style>
    .botao {
        text-decoration: none;
    }

    .thumbnail {
        max-height: 300px;
        object-fit: cover;
    }

    .button {
        text-decoration: none;
    }

    a {
        text-decoration: none;
    }

        a:link {
            text-decoration: none;
        }

        a:visited {
            text-decoration: none;
        }

        a:hover {
            text-decoration: none;
        }

        a:active {
            text-decoration: none;
        }

</style>

<img src="~/imagens/@Html.DisplayFor(model => model.Thumbnail)"
     alt="Icon do Utilizador @Html.DisplayFor(model => model.Thumbnail)"
     title="@Html.DisplayFor(model => model.Thumbnail)"
     class="card-img-top rounded-top thumbnail" />

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <hr />
    <div class="row">
        <h5 class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </h5>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conteudo)
        </dd>
    </div>
</div>

<hr />
<div class="row row-cols-auto">

    <div class="col">
        <h5>
            Autor:
        </h5>
        <p>@Html.DisplayFor(model => model.Utente.Nome)</p>
    </div>

    <div class="col">
        <h5>
            Dificuldade:
        </h5>
        <p>Nível @Html.DisplayFor(model => model.Dificuldade)</p>
    </div>

    <div class="col">
        <h5>
            Categorias:
        </h5>

        <div class="row row-cols-auto">
            @foreach (var categoria in Model.ListaCategorias)
            {
                <div class="col">
                    @categoria.Nome
                </div>
            }
        </div>
    </div>
</div>

<div>
    @if (UserManager.GetUserId(User) == Model.Utente.UserID)
    {

        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a class="btn btn-outline-warning" asp-action="Delete" asp-route-id="@Model?.Id">Apagar</a>
    }


    <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Voltar</a>
</div>
